<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bargo"
    android:screenOrientation="portrait">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsuariConsumidor.Activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".UsuariConsumidor.Activity.ListProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.ReservarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.MisReservasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.ConfiguracioConsumidorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.RetosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.InfoBarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariConsumidor.Activity.InfoEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariPropietari.Activity.MainPropietariActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsuariPropietari.Activity.ConfiguracioPropietariActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanviarContrasenyaActivity">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewCorreu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="3"
                android:text="@string/correo_electr_nico_asociado_a_tu_cuenta_"
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/editTextCorreu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/correo_electronico"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewCorreu"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textViewCodi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="3"
                android:text="@string/codigo_"
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextCorreu"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/editTextCodi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/codigo"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewCodi"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textViewContrasenya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="3"
                android:text="@string/contrase_a_nueva"
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextCodi"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/editTextContrasenya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/contrase_a_nueva"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContrasenya"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textViewConfirmarContrasenya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="3"
                android:text="@string/confirma_contrase_a_nueva_"
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextContrasenya"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/editTextConfirmarContrasenya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/contrase_a_nueva"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewConfirmarContrasenya"
                tools:targetApi="o" />

            <CheckBox
                android:id="@+id/checkBoxContraseña2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ver_contraseña"
                android:visibility="visible"
                android:maxLines="1"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/editTextConfirmarContrasenya"
                app:layout_constraintStart_toStartOf="@+id/editTextConfirmarContrasenya"
                app:layout_constraintTop_toBottomOf="@+id/editTextConfirmarContrasenya"
                tools:targetApi="o"/>

            <Button
                android:id="@+id/buttonContinuar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="#CC383B"
                android:text="@string/continuar"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxContraseña2"
                tools:targetApi="o"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
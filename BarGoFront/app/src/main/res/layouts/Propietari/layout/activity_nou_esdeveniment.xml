<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuariPropietari.Activity.NouEsdevenimentActivity"
    android:paddingBottom="60dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titolNouEsdeveniment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/evento"
                android:textColor="#323131"
                android:textSize="30sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/nomNouEsdeveniment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/nombre_evento"
                android:inputType="text"
                android:text=""
                android:maxLines="1"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                tools:targetApi="o"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titolNouEsdeveniment" />

            <EditText
                android:id="@+id/diaNouEsdeveniment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/fecha_evento"
                android:inputType="date|text"
                android:onClick="onDataClicked"
                android:text=""
                android:maxLines="1"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                tools:targetApi="o"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nomNouEsdeveniment" />

            <EditText
                android:id="@+id/horaNouEsdeveniment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/hora_evento"
                android:inputType="text|time"
                android:onClick="onHorariClicked"
                android:text=""
                android:maxLines="1"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                tools:targetApi="o"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diaNouEsdeveniment" />

            <Button
                android:id="@+id/crearNouEsdeveniment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                android:background="#CC383B"
                android:maxLines="1"
                android:text="@string/crear_evento"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horaNouEsdeveniment"
                tools:targetApi="o" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
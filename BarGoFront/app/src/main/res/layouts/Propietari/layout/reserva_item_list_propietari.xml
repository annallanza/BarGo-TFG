<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomUsuariReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeTextType="uniform"
        android:maxLines="2"
        android:text="@string/nombre_usuario"
        android:textColor="#000000"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/validarButton"
        app:layout_constraintEnd_toStartOf="@+id/validarButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/validarButton"
        app:layout_constraintVertical_bias="0.75"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/infoReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeTextType="uniform"
        android:hint="@string/info"
        android:justificationMode="inter_word"
        android:maxLines="2"
        android:textColor="#808080"
        android:textSize="12sp"
        app:autoSizeMaxTextSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/eliminarButton"
        app:layout_constraintEnd_toStartOf="@+id/eliminarButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eliminarButton"
        tools:targetApi="o" />

    <Button
        android:id="@+id/validarButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorBarGo"
        android:text="@string/validar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nomUsuariReserva"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eliminarButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorBarGo"
        android:text="@string/eliminar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/validarButton"
        app:layout_constraintTop_toBottomOf="@id/validarButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
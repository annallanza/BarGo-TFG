<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuariPropietari.Fragment.OcupacioFragment">

    <TextView
        android:id="@+id/textViewModificarOcupacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/modificar_ocupaci_n"
        android:textColor="#323131"
        android:textSize="36sp"
        app:autoSizeMaxTextSize="36sp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        tools:targetApi="o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollViewOcupacio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuardarCanvis2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModificarOcupacio">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="411dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <TextView
                android:id="@+id/textViewInterior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/interior_"
                android:textColor="#000000"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <RadioGroup
                android:id="@+id/radioGroupInterior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewInterior">

                <RadioButton
                    android:id="@+id/radioButtonLlenoInterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/lleno"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />

                <RadioButton
                    android:id="@+id/radioButtonMedioLlenoInterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/medio_lleno"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />

                <RadioButton
                    android:id="@+id/radioButtonVacioInterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/vac_o"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />
            </RadioGroup>

            <TextView
                android:id="@+id/textViewExterior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/exterior"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="gone"
                app:autoSizeMaxTextSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroupInterior"
                tools:targetApi="o" />

            <RadioGroup
                android:id="@+id/radioGroupExterior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewExterior">

                <RadioButton
                    android:id="@+id/radioButtonLlenoExterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/lleno"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />

                <RadioButton
                    android:id="@+id/radioButtonMedioLlenoExterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/medio_lleno"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />

                <RadioButton
                    android:id="@+id/radioButtonVacioExterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:text="@string/vac_o"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:autoSizeMaxTextSize="17sp"
                    tools:targetApi="o" />
            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonGuardarCanvis2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="110dp"
        android:background="#CC383B"
        android:text="@string/guardar_cambios"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>